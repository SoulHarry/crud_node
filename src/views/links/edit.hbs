<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" id="" placeholder="Titulo" value={{links.title}} autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" id=""  value={{links.url}} placeholder="URL">
                        </div>
                        <div>
                            <textarea name="description" id="" cols="30" rows="2" placeholder="Descripcion">{{links.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
